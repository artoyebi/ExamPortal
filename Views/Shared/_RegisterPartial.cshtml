@model RegisterUserViewModel

<div class="form-container container shadow-lg box-shadow text-center border-info col-s-12 col-md-10 col-lg-6">
    <div class="row m-4">
        <div class="col-sm-12">
            <form asp-action="register" method="post" class="mt-4 mb-4">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    @*<label asp-for="FirstName" class="col-form-label col-sm-2"></label>*@
                    <input asp-for="FirstName" class="col-sm-12 form-control" placeholder="First Name"/>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    @*<label asp-for="LastName" class="col-form-label col-sm-2"></label>*@
                    <input asp-for="LastName" class="col-sm-12 form-control" placeholder="Last Name"/>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    @*<label asp-for="Email" class="col-form-label col-sm-2"></label>*@
                    <input asp-for="Email" class="col-sm-12 form-control" placeholder="Email Address"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    @*<label asp-for="Password" class="col-form-label col-sm-2"></label>*@
                    <input asp-for="Password" class="col-sm-12 form-control" placeholder="Password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    @*<label asp-for="ConfirmPassword" class="col-form-label col-sm-2"></label>*@
                    <input asp-for="ConfirmPassword" class="col-sm-12 form-control" placeholder="Confirm Password"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    @*<label asp-for="PhoneNumber" class="col-form-label col-sm-2"></label>*@
                    <input asp-for="PhoneNumber" class="col-sm-12 form-control" placeholder="Phone Number"/>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    @*<label asp-for="DOB" class="col-form-label col-sm-2"></label>*@
                    <input asp-for="DOB" class="col-sm-12 form-control" placeholder="Date of Birth" />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg">Submit <span><i class="fas fa-chevron-circle-right"></i></span></button>


            </form>
            <div class="mb-3">Already have an account? <a asp-controller="account" asp-action="login">Login</a></div>
        </div>
    </div>
</div>