@model List<AddCandidateToTestViewModel>

@{ ViewBag.Title = "Add Candidate To Test";
    var testName = @ViewBag.TestDescription;
    var testId = ViewBag.testId;
    }


<h1 class="text-center">Add Candidate To Test</h1>


<div class="container">
    <form asp-action="AddCandidateToTest" method="post">
        <div class="card">
            <div class="card-header">
                @testName
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input hidden asp-for="@Model[i].CandidateId" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].FirstName @Model[i].Lastname</label>

                    </div>
                }
            </div>
            <div class="card-footer">
                <input type="text" name="testId" value="@testId" hidden />
                <input type="submit" value="Update" class="btn btn-primary" style="width: auto;" />
                <a asp-action="dashboard" class="btn btn-primary" style="width: auto">Cancel</a>
            </div>
        </div>
    </form>
</div>